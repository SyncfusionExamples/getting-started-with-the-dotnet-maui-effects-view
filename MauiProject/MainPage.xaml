<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="MauiProject.MainPage">

    <!--RippleAnimationDuration="2000"
                      HighlightBackground="#FF0000"-->
    <sf:SfEffectsView HeightRequest="120" WidthRequest="500" 
                      TouchDownEffects="Scale"
                      ScaleFactor="0.85"
                      BackgroundColor="AliceBlue">
        <Grid HeightRequest="90" WidthRequest="400" ColumnDefinitions="75,*">
            <Image Source="person.png"/>
            <StackLayout Grid.Column="1">
                <Label Text="Laura Steffi"
                       VerticalTextAlignment="Center"
                       FontSize="22"
                       Margin="15,18,0,0"/>
                <Label Text="Data Science Analyst"
                       VerticalTextAlignment="Center"
                       FontSize="18"
                       Margin="15,0,0,0"/>
            </StackLayout>
        </Grid>
    </sf:SfEffectsView>

</ContentPage>
